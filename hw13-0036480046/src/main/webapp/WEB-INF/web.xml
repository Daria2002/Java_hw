<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
  metadata-complete="true">

  <display-name>Moja prva aplikacija</display-name>
  <description>
     Prva aplikacija
  </description>

<servlet>
	<servlet-name>colors-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.ColorsServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>trigonometric-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.TrigonometricServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>report-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.ReportServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>powers-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.PowersServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>glasanje-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>glasanjeGlasaj-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeGlasajServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>glasanjeXls-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeXlsServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>glasanjeGrafika-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeGrafikaServlet</servlet-class>
</servlet>

<servlet>
	<servlet-name>glasanjeRezultati-servlet</servlet-name>
	<servlet-class>hr.fer.zemris.java.servlets.GlasanjeRezultatiServlet</servlet-class>
</servlet>

<servlet-mapping>
	<servlet-name>colors-servlet</servlet-name>
	<url-pattern>/setcolor</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>trigonometric-servlet</servlet-name>
	<url-pattern>/trigonometric</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>report-servlet</servlet-name>
	<url-pattern>/reportImage</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>powers-servlet</servlet-name>
	<url-pattern>/powers</url-pattern>
</servlet-mapping>

<listener>
	<listener-class>
		hr.fer.zemris.java.listeners.AppListener
	</listener-class>
</listener>

<servlet-mapping>
	<servlet-name>glasanje-servlet</servlet-name>
	<url-pattern>/glasanje</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>glasanjeGlasaj-servlet</servlet-name>
	<url-pattern>/glasanje-glasaj</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>glasanjeRezultati-servlet</servlet-name>
	<url-pattern>/glasanje-rezultati</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>glasanjeXls-servlet</servlet-name>
	<url-pattern>/glasanje-xls</url-pattern>
</servlet-mapping>

<servlet-mapping>
	<servlet-name>glasanjeGrafika-servlet</servlet-name>
	<url-pattern>/glasanje-grafika</url-pattern>
</servlet-mapping>

</web-app>


