<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
		 http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1"
  metadata-complete="false">

  <display-name>Moja prva aplikacija</display-name>
  <description>
     Prva aplikacija
  </description>

	<servlet>
		<servlet-name>db-servlet</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.DbServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>db-servlet</servlet-name>
		<url-pattern>/servleti/index.html</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>glasanje-servlet</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.GlasanjeServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>glasanje-servlet</servlet-name>
		<url-pattern>/servleti/glasanje</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>glasanjeGlasaj-servlet</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.GlasanjeGlasajServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>glasanjeGlasaj-servlet</servlet-name>
		<url-pattern>/servleti/glasanje-glasaj</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>index.html-servlet</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.IndexServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>index.html-servlet</servlet-name>
		<url-pattern>/index.html</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>glasanjeRezultati-servlet</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.GlasanjeRezultatiServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>glasanjeRezultati-servlet</servlet-name>
		<url-pattern>/glasanje-rezultati</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>colors-servlet</servlet-name>
		<servlet-class>hr.fer.zemris.java.servlets.ColorsServlet</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>colors-servlet</servlet-name>
		<url-pattern>/setcolor</url-pattern>
	</servlet-mapping>

</web-app>
